<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avenues_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/academydemo1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avenues_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Larkspur Sports Academy"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avenues_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="QAR 210.00 / hour"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/color_desc"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avenues_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_map"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Umm Lakhba Environment Street, Doha, Qatar"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avenues_image"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="Facility: "
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/avenues_image"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="Toilet, Food &amp; drink, Shower, Changing rome"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>